{
  "name": "backend",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "dotenvx run -f .env.local -f .env -- tsx src/index.ts",
    "watch": "dotenvx run -f .env.local -f .env -- tsx watch src/index.ts",
    "stub": "unbuild --stub",
    "dev": "pnpm run watch",
    "lint": "eslint .",
    "test": "vitest",
    "test:types": "tsc --noEmit --skipLibCheck",
    "check": "pnpm lint && pnpm test:types && vitest run --coverage",
    "build": "dotenvx run -f .env.prod.local -f .env -- unbuild"
  },
  "dependencies": {
    "srvx": "^0.1.3"
  },
  "devDependencies": {
    "@hono/arktype-validator": "^2.0.0",
    "@kinde-oss/kinde-typescript-sdk": "^2.9.1",
    "@local/common": "workspace:*",
    "@local/tsconfig": "workspace:*",
    "@namesmt/utils": "^0.5.9",
    "@scalar/hono-api-reference": "^0.5.165",
    "@vitest/coverage-v8": "^2.1.8",
    "arktype": "2.0.0-rc.25",
    "consola": "^3.3.0",
    "hono": "^4.6.14",
    "hono-adapter-aws-lambda": "^1.3.0",
    "hono-openapi": "^0.2.1",
    "hono-sessions": "^0.7.0",
    "std-env": "^3.8.0",
    "unbuild": "^3.0.1",
    "vitest": "^2.1.8"
  }
}
