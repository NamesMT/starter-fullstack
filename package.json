{
  "name": "starter-fullstack",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": ">=20.13.1"
  },
  "scripts": {
    "build": "dotenvx run -- turbo run build",
    "dev": "dotenvx run -- turbo run dev",
    "devSST": "dotenvx run -f .env.sst -f .env -- sst dev \"pnpm -F=frontend run dev\"",
    "lint": "turbo run lint",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "sst": "ion"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@dotenvx/dotenvx": "1.11.4",
    "@types/aws-lambda": "^8.10.147",
    "@unocss/eslint-plugin": "^66.0.0",
    "eslint": "^9.22.0",
    "frontend": "workspace:*",
    "lint-staged": "^15.5.0",
    "pathe": "^2.0.3",
    "simple-git-hooks": "^2.11.1",
    "std-env": "^3.8.1",
    "tsx": "^4.19.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "unocss": "^66.0.0"
  },
  "pnpm": {
    "overrides": {
      "is-arguments": "npm:@nolyfill/is-arguments@^1",
      "is-core-module": "npm:@nolyfill/is-core-module@^1",
      "is-generator-function": "npm:@nolyfill/is-generator-function@^1",
      "is-typed-array": "npm:@nolyfill/is-typed-array@^1",
      "isarray": "npm:@nolyfill/isarray@^1",
      "safe-buffer": "npm:@nolyfill/safe-buffer@^1",
      "safer-buffer": "npm:@nolyfill/safer-buffer@^1",
      "side-channel": "npm:@nolyfill/side-channel@^1",
      "string.prototype.codepointat": "npm:@nolyfill/string.prototype.codepointat@^1",
      "which-typed-array": "npm:@nolyfill/which-typed-array@^1"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
