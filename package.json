{
  "name": "starter-fullstack",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.8.0",
  "engines": {
    "node": ">=20.13.1"
  },
  "scripts": {
    "build": "dotenvx run -- turbo run build",
    "dev": "dotenvx run -- turbo run dev",
    "devSST": "dotenvx run -f .env.sst -f .env -- sst dev \"pnpm -F=frontend run dev\"",
    "lint": "turbo run lint",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "sst": "ion"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.4.1",
    "@dotenvx/dotenvx": "^1.10.2",
    "@local/tsconfig": "workspace:*",
    "@types/aws-lambda": "8.10.138",
    "@unocss/eslint-plugin": "^0.62.2",
    "eslint": "^9.9.1",
    "frontend": "workspace:*",
    "lint-staged": "^15.2.9",
    "pathe": "^1.1.2",
    "simple-git-hooks": "^2.11.1",
    "std-env": "^3.7.0",
    "turbo": "^2.0.14",
    "typescript": "^5.5.4",
    "unocss": "^0.62.2"
  },
  "pnpm": {
    "overrides": {
      "hasown": "npm:@nolyfill/hasown@^1",
      "is-core-module": "npm:@nolyfill/is-core-module@^1",
      "isarray": "npm:@nolyfill/isarray@^1",
      "string.prototype.codepointat": "npm:@nolyfill/string.prototype.codepointat@^1"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
