{
  // ############# ALL ENV VARIABLES #############
  //   // apps/frontend
  //   "NUXT_PUBLIC_FRONTEND_URL", // For SEO
  //   "NUXT_PUBLIC_BACKEND_URL", // To connect with backend

  //   // apps/backend
  //   "FRONTEND_URL", // To allow cors from frontend and redirections
  //   "KINDE_DOMAIN",
  //   "KINDE_CLIENT_ID",
  //   "KINDE_CLIENT_SECRET",
  //   "KINDE_REDIRECT_URI",
  //   "KINDE_LOGOUT_REDIRECT_URI"
  // ],
  // #############################################
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    "**/.env.*"
  ],
  "tasks": {
    "build": {
      "env": [
        "NUXT_PUBLIC_FRONTEND_URL",
        "NUXT_PUBLIC_BACKEND_URL"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".nuxt/**",
        ".output/**",
        "dist/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
